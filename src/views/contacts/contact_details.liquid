    <div>
      <div>Email: {{ contact.email }}</div>
    </div>

    <p>
      <a href="/contacts/{{contact.id}}/edit" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
      <a href="/contacts" class="flex">
        <svg
          xmlns="http://www.w3.org/2000/svg"
